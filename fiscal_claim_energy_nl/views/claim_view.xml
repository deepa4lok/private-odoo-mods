<?xml version="1.0"?>
<openerp>
    <data>
        <!-- TODO: put here a reminder on what to do at the first edition -->
        <record id="claim_tree_view" model="ir.ui.view">
            <field name="name">claim.tree.view.view</field>
            <field name="model">claim</field>
            <field name="view_type">tree</field>
            <field name="inherit_id" ref=""/>
            <field name="arch" type="xml">
                <tree string="Claims">
                    <field name="batchcode"/>
                    <field name="claim_date"/>
                    <field name="last_line_date"/>
                    <field name="zpartner"/>
                    <field name="contrrek"/>
                    <field name="orig_energy_tax" sum="Orig Energy Tax"/>
                    <field name="amount_nett" sum="Nett"/>
                    <field name="amount_vat_cum" sum="Vat"/>
                    <field name="amount_energy_tax_cum" sum="EnergyTax Return"/>
                    <field name="amount_tax_cum" sum="Tax Claim"/>
                    <field name="amount_tax_return" sum="Tax Returned"/>
                    <field name="amount_payment" sum="Payment"/>
                    <field name="amount_cost" sum="Cost"/>
                    <field name="grand_total_cum" sum="Total Cum"/>
                </tree>
            </field>
        </record>

        <record id="claims_form" model="ir.ui.view">
            <field name="name">claim.form</field>
            <field name="model">claim</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Claims">
                <sheet string="Claim">
                    <group colspan="8" col="8">
                        <group colspan="2" col="2">
                            <field name="contrrek"/>
                            <field string="Debtor" name="zpartner" />
                            <field name="partnersrt" />
                            <field name="batchcode"/>
                            <field name="claim_date"/>
                            <field name="last_line_date"/>

                        </group>
                        <group colspan="2" col="2">
                            <field name="amount_nett" />
                            <field name="orig_vat" />
                            <field name="orig_energy_tax" />
                            <field name="orig_tax" />
                            <field name="nett_tax_total" />
                            <field name="amount_cost" />
                            <field name="amount_payment" />
                            <field name="amount_total" />
                        </group>
                        <group colspan="2" col="2">
                            <field name="amount_vat" />
                            <field name="amount_energy_tax" />
                            <field name="amount_energy_tax_e" />
                            <field name="amount_energy_tax_g" />
                            <field name="amount_durable_tax_e" />
                            <field name="amount_durable_tax_g" />
                            <field name="amount_tax_claim" />
                        </group>
                        <group colspan="2" col="2">
                            <field name="amount_tax_return_energy" />
                            <field name="amount_tax_return_vat" />
                            <field name="amount_tax_return" />
                            <field name="amount_energy_tax_cum" />
                            <field name="amount_vat_cum" />
                            <field name="amount_tax_cum" />
                            <field name="amount_tax_future" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Claim Details">
                            <field name="claim_line">
                                <tree string="Claim lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="create_date"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="due_date" />
                                    <field name="bdn" />
                                    <field name="amount_total" sum="Total"/>
                                    <field name="nett_amount" sum="Nett"/>
                                    <field name="vat" sum="Vat"/>
                                    <field name="energy_tax_e" sum="E-tax"/>
                                    <field name="energy_tax_g" sum="G-tax"/>
                                    <field name="durable_tax_e" sum="Durable-E"/>
                                    <field name="durable_tax_g" sum="Durable-G"/>
                                    <!--field name="price_subtotal"/-->
                                </tree>
                            </field>
                        </page>
                        <page string="Cost Lines">
                            <field name="cost_line">
                                <tree string="Cost Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="create_date"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="due_date" />
                                    <field name="amount_cost" sum="Total Cost"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tax Returns">
                            <field name="tax_return_line">
                                <tree string="Tax Return Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="create_date"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="date_tax_request" />
                                    <field name="amount_tax_return_total" sum="Tax Total"/>
                                    <field name="energy_tax_e_return" sum="Tax-E"/>
                                    <field name="energy_tax_g_return" sum="Tax-G"/>
                                    <field name="durable_tax_e_return" sum="Durable-E"/>
                                    <field name="durable_tax_g_return" sum="Durable-G"/>
                                    <field name="vat_return" sum="VAT"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Payments">
                            <field name="payment_line">
                                <tree string="Payment Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="create_date"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="amount_payment" sum="Total Payments"/>
                                    <field name="date_payment"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details">
                            <group colspan="6" col="6">
                                <group colspan="2" col="2">
                                    <field name="amount_nett_cum" />
                                    <field name="nett_tax_total_cum" />
                                    <field name="amount_cost_cum" />
                                    <field name="grand_total_cum" />
                                    <field name="amount_payment_cum" />
                                </group>
                                <group colspan="2" col="2">
                                    <field name="amount_vat_cum" />
                                    <field name="amount_energy_tax_e_cum" />
                                    <field name="amount_energy_tax_g_cum" />
                                    <field name="amount_durable_tax_e_cum" />
                                    <field name="amount_durable_tax_g_cum" />
                                    <field name="amount_tax_cum" />
                                    <field name="amount_tax" />
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <div class="oe_clear">
                                <label for="comment"/>
                            </div>
                            <field name="comment"/>
                            <group>
                                <field name="bankruptcy"/>
                                <field name="wsnp"/>
                                <field name="sued"/>
                                <field name="discharge"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

         <record id="view_claims_filter" model="ir.ui.view">
            <field name="name">claim.select</field>
            <field name="model">claim</field>
            <field name="arch" type="xml">
                <search string="Search Claim">
                    <field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_debtor" string="Debtor" context="{'group_by':'zpartner'}"/>
                        <filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/>
                        <filter name="group_by_batchdate" string="Batch Date" context="{'group_by':'claim_date'}"/>
                        <separator/>
                        <filter name="group_by_duemonth" string="Due Month" context="{'group_by':'last_line_date'}"/>
                    </group>
               </search>
            </field>
         </record>
         <record id="view_claims_pivot" model="ir.ui.view">
         <field name="name">claim.pivot</field>
         <field name="model">claim</field>
         <field name="arch" type="xml">
            <pivot string="Claims Tax Analysis">
                <field name="contrrek" type="row"/>
                <field name="amount_nett" type="measure" widget="monetary"/>
                <field name="orig_vat"  type="measure" widget="monetary"/>
                <field name="orig_energy_tax" type="measure" widget="monetary"/>
                <field name="orig_tax" type="measure" widget="monetary"/>
                <field name="nett_tax_total" type="measure" widget="monetary"/>
                <field name="amount_cost" type="measure" widget="monetary"/>
                <field name="amount_payment" type="measure" widget="monetary"/>
                <field name="amount_total" type="measure" widget="monetary"/>
            </pivot>
         </field>
         </record>
         <record id="payment_line_tree_view" model="ir.ui.view">
            <field name="name">payment.line.tree.view</field>
            <field name="model">payment.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Payment Lines" delete="true" edit="false" create="true">
                    <field name="contract_number"/>
                    <field name="date_payment"/>
                    <field name="create_date"/>
                    <field name="amount_payment" sum="Payments"/>
                    <field name="docsoort"/>
                    <field name="ref"/>
                    <field name="docnr" />
                </tree>
            </field>
        </record>
        <record id="view_payment_line_filter" model="ir.ui.view">
            <field name="name">payment.line.select</field>
            <field name="model">payment.line</field>
            <field name="arch" type="xml">
                <search string="Search Payment Line">
                    <!--field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/-->
                    <group expand="0" string="Group By">
                    	<!--filter name="group_by_debtor" string="Debtor" context="{'group_by':'zpartner'}"/>
                        <filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/-->
                        <separator/>
                        <filter string="Paid Month" context="{'group_by':'date_payment'}"/>
                    </group>
               </search>
            </field>
         </record>

        <record id="cost_line_tree_view" model="ir.ui.view">
            <field name="name">cost.line.tree.view</field>
            <field name="model">cost.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Cost Lines" delete="true" edit="false" create="true">
                    <field name="contract_number"/>
                    <field name="due_date"/>
                    <field name="amount_cost" sum="Costs"/>
                    <field name="docsoort"/>
                    <field name="create_date"/>
                    <field name="ref"/>
                    <field name="docnr" />
                </tree>
            </field>
        </record>

        <record id="view_cost_line_filter" model="ir.ui.view">
            <field name="name">cost.line.select</field>
            <field name="model">cost.line</field>
            <field name="arch" type="xml">
                <search string="Search Cost Line">
                    <!--field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/-->
                    <group expand="0" string="Group By">
                    	<filter name="group_by_claim" string="Claim" context="{'group_by':'claim_id'}"/>
                        <!--filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/-->
                        <separator/>
                        <filter string="Post Month" context="{'group_by':'due_date'}"/>
                    </group>
               </search>
            </field>
         </record>

        <record id="tax_line_tree_view" model="ir.ui.view">
            <field name="name">tax.line.tree.view</field>
            <field name="model">tax.return.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tax Lines" delete="true" edit="false" create="true">
                    <field name="claim_id"/>
                    <field name="declaration_id"/>
                    <field name="contract_number"/>
                    <field name="date_tax_request"/>
                    <field name="docsoort"/>
                    <field name="create_date"/>
                    <field name="ref"/>
                    <field name="docnr" />
                    <field name="energy_tax_e_return" sum="Total E"/>
                    <field name="energy_tax_g_return" sum="Total G"/>
                    <field name="durable_tax_e_return" sum="Total Durable E"/>
                    <field name="durable_tax_g_return" sum="Total Durable G"/>
                    <field name="vat_return" sum="Total VAT"/>
                    <field name="amount_tax_return_total" sum="Total"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_tax_line_filter" model="ir.ui.view">
            <field name="name">tax.line.select</field>
            <field name="model">tax.return.line</field>
            <field name="arch" type="xml">
                <search string="Search Tax Line">
                    <filter name="tax_return" string="Tax Return" domain="[('docsoort','=','TR')]" help="Tax Return Lines"/>
                    <filter name="tax_declaration" string="Tax Declaration" domain="[('docsoort','=','TD')]" help="Tax Declaration Lines"/>
                    <separator/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_claim" string="Claim" context="{'group_by':'claim_id'}"/>
                        <!--filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/-->
                        <separator/>
                        <filter string="Create Month" context="{'group_by':'create_date'}"/>
                        <filter string="Request Month" context="{'group_by':'date_tax_request'}"/>
                        <filter string="Tax declaration" context="{'group_by':'declaration_id'}"/>
                    </group>
               </search>
            </field>
         </record>

        <record id="tax_declaration_tree_view" model="ir.ui.view">
            <field name="name">tax.declaration.tree.view</field>
            <field name="model">tax.declaration</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tax Declarations" delete="true" edit="false" create="true">
                    <field name="name"/>
                    <field name="from_invoice_date"/>
                    <field name="to_invoice_date"/>
                    <field name="from_batch_date"/>
                    <field name="to_batch_date"/>
                    <field name="cutoff"/>
                    <field name="date_tax_request" />
                    <field name="vat_return"/>
                    <field name="e_tax_return"/>
                    <field name="total_tax_return"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="tax_declaration_form" model="ir.ui.view">
            <field name="name">declaration.form</field>
            <field name="model">tax.declaration</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Tax Declaration">
                    <sheet string="Tax Declaration">
                        <group colspan="6" col="6">
                            <group colspan="2" col="2">
                                <field name="name"/>
                                <field name="cutoff" />
                                <field name="date_tax_request" />
                            </group>
                            <group colspan="2" col="2">
                                <field name="from_invoice_date" />
                                <field name="to_invoice_date"/>
                            </group>
                            <group colspan="2" col="2">
                                <field name="from_batch_date"/>
                                <field name="to_batch_date"/>
                            </group>
                            <group colspan="6" col="6">
                                <field name="vat_return"/>
                                <field name="e_tax_return"/>
                                <field name="total_tax_return"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Tax Lines">
                                <field name="tax_return_line">
                                    <tree string="Tax lines" >
                                        <field name="claim_id"/>
                                        <field name="contract_number"/>
                                        <field name="date_tax_request"/>
                                        <field name="docsoort"/>
                                        <field name="create_date"/>
                                        <field name="ref"/>
                                        <field name="docnr" />
                                        <field name="energy_tax_e_return" sum="Total E"/>
                                        <field name="energy_tax_g_return" sum="Total G"/>
                                        <field name="durable_tax_e_return" sum="Total Durable E"/>
                                        <field name="durable_tax_g_return" sum="Total Durable G"/>
                                        <field name="vat_return" sum="Total VAT"/>
                                        <field name="amount_tax_return_total" sum="Total"/>
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Comments">
                                    <field name="comment"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>