<?xml version="1.0"?>
<openerp>
    <data>
        <!-- TODO: put here a reminder on what to do at the first edition -->
        <record id="claim_tree_view" model="ir.ui.view">
            <field name="name">claim.tree.view.view</field>
            <field name="model">fiscal.claim</field>
            <field name="view_type">tree</field>
            <field name="inherit_id" ref=""/>
            <field name="arch" type="xml">
                <tree string="Claims">
                    <field name="batchcode"/>
                    <field name="claim_date"/>
                    <field name="last_line_date"/>
                    <field name="zpartner"/>
                    <field name="contrrek"/>
                    <field name="tax_return_sent"/>
                    <field name="amount_nett" sum="Nett"/>
                    <field name="amount_vat_cum" sum="Vat"/>
                    <field name="amount_energy_tax_e_cum" sum="E-tax"/>
                    <field name="amount_energy_tax_g_cum" sum="G-tax"/>
                    <field name="amount_durable_tax_e_cum" sum="Durable-E"/>
                    <field name="amount_durable_tax_g_cum" sum="Durable-G"/>
                    <field name="amount_tax_cum" sum="Tax"/>
                    <field name="amount_tax_return" sum="Tax Return"/>
                    <field name="amount_payment" sum="Payment"/>
                    <field name="amount_cost" sum="Cost"/>
                    <field name="grand_total" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="claims_form" model="ir.ui.view">
            <field name="name">claim.form</field>
            <field name="model">fiscal.claim</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Claims">
                <sheet string="Claim">
                    <group colspan="6" col="6">
                        <group colspan="2" col="2">
                            <field name="contrrek"/>
                            <field string="Debtor" name="zpartner" />
                            <field name="partnersrt" />
                            <field name="batchcode"/>
                            <field name="claim_date"/>
                            <field name="last_line_date"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="amount_nett" />
                            <field name="amount_tax_orig" />
                            <field name="nett_tax_total" />
                            <field name="amount_cost" />
                            <field name="grand_total" />
                            <field name="amount_payment" />
                        </group>
                        <group colspan="2" col="2">
                            <field name="amount_vat" />
                            <field name="amount_energy_tax_e" />
                            <field name="amount_energy_tax_g" />
                            <field name="amount_durable_tax_e" />
                            <field name="amount_durable_tax_g" />
                            <field name="amount_tax_return" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Claim Details">
                            <field name="claim_line">
                                <tree string="Claim lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="due_date" />
                                    <field name="bdn" />
                                    <field name="amount_total"/>
                                    <field name="nett_amount"/>
                                    <field name="vat" />
                                    <field name="energy_tax_e"/>
                                    <field name="energy_tax_g" />
                                    <field name="durable_tax_e" />
                                    <field name="durable_tax_g" />
                                    <!--field name="price_subtotal"/-->
                                </tree>
                            </field>
                        </page>
                        <page string="Cost Lines">
                            <field name="cost_line">
                                <tree string="Cost Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="due_date" />
                                    <field name="amount_cost"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tax Returns">
                            <field name="tax_return_line">
                                <tree string="Tax Return Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="date_tax_request" />
                                    <field name="amount_tax_return_total"/>
                                    <field name="energy_tax_e_return"/>
                                    <field name="energy_tax_g_return"/>
                                    <field name="durable_tax_e_return"/>
                                    <field name="durable_tax_g_return"/>
                                    <field name="vat_return"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Payments">
                            <field name="payment_line">
                                <tree string="Payment Lines" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="ref"/>
                                    <field name="docnr"/>
                                    <field name="docsoort" />
                                    <field name="amount_payment" />
                                    <field name="date_payment"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cum">
                            <group colspan="6" col="6">
                                <group colspan="2" col="2">
                                    <field name="amount_nett_cum" />
                                    <field name="nett_tax_total_cum" />
                                    <field name="amount_cost_cum" />
                                    <field name="grand_total_cum" />
                                    <field name="amount_payment_cum" />
                                    <field name="amount_tax_return_cum" />
                                </group>
                                <group colspan="2" col="2">
                                    <field name="amount_vat_cum" />
                                    <field name="amount_energy_tax_e_cum" />
                                    <field name="amount_energy_tax_g_cum" />
                                    <field name="amount_durable_tax_e_cum" />
                                    <field name="amount_durable_tax_g_cum" />
                                    <field name="amount_tax_cum" />

                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <div class="oe_clear">
                                <label for="comment"/>
                            </div>
                            <field name="comment"/>
                            <group>
                                <field name="bankruptcy"/>
                                <field name="wsnp"/>
                                <field name="sued"/>
                                <field name="discharge"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

         <record id="view_claims_filter" model="ir.ui.view">
            <field name="name">claim.select</field>
            <field name="model">fiscal.claim</field>
            <field name="arch" type="xml">
                <search string="Search Claim">
                    <field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_debtor" string="Debtor" context="{'group_by':'zpartner'}"/>
                        <filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/>
                        <separator/>
                        <filter string="Due Month" context="{'group_by':'last_line_date'}"/>
                    </group>
               </search>
            </field>
         </record>

         <record id="payment_line_tree_view" model="ir.ui.view">
            <field name="name">payment.line.tree.view</field>
            <field name="model">claim.payment.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Payment Lines" delete="true" edit="false" create="false">
                    <field name="claim_id"/>
                    <field name="date_payment"/>
                    <field name="amount_payment" sum="Payments"/>
                    <field name="docsoort"/>
                    <field name="ref"/>
                    <field name="docnr" />
                </tree>
            </field>
        </record>
        <record id="view_payment_line_filter" model="ir.ui.view">
            <field name="name">payment.line.select</field>
            <field name="model">claim.payment.line</field>
            <field name="arch" type="xml">
                <search string="Search Payment Line">
                    <!--field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/-->
                    <group expand="0" string="Group By">
                    	<!--filter name="group_by_debtor" string="Debtor" context="{'group_by':'zpartner'}"/>
                        <filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/-->
                        <separator/>
                        <filter string="Paid Month" context="{'group_by':'date_payment'}"/>
                    </group>
               </search>
            </field>
         </record>
        <record id="cost_line_tree_view" model="ir.ui.view">
            <field name="name">cost.line.tree.view</field>
            <field name="model">claim.cost.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Cost Lines" delete="true" edit="false" create="false">
                    <field name="claim_id"/>
                    <field name="due_date"/>
                    <field name="amount_cost" sum="Costs"/>
                    <field name="docsoort"/>
                    <field name="ref"/>
                    <field name="docnr" />
                </tree>
            </field>
        </record>
        <record id="view_cost_line_filter" model="ir.ui.view">
            <field name="name">cost.line.select</field>
            <field name="model">claim.cost.line</field>
            <field name="arch" type="xml">
                <search string="Search Cost Line">
                    <!--field name="contrrek" string="Claim" filter_domain="['|','|', ('contrrek','ilike',self), ('zpartner','ilike',self), ('batchcode', 'ilike', self)]"/>
                    <filter name="tax_return" string="Tax Return" domain="[('tax_return_sent','=',True)]" help="Tax return processed"/>
                    <separator/>
                    <field name="zpartner" operator="child_of"/>
                    <separator/-->
                    <group expand="0" string="Group By">
                    	<filter name="group_by_claim" string="Claim" context="{'group_by':'claim_id'}"/>
                        <!--filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/-->
                        <separator/>
                        <filter string="Post Month" context="{'group_by':'due_date'}"/>
                    </group>
               </search>
            </field>
         </record>
    </data>
</openerp>